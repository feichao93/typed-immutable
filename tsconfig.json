{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "build",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
